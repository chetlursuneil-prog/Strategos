# Supabase / Postgres (managed)
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_DB_URL=postgresql://postgres:password@db.supabase.co:5432/postgres
SUPABASE_SERVICE_ROLE_KEY=service_role_key_here

# App settings
DATABASE_URL=${SUPABASE_DB_URL}
REDIS_URL=redis://localhost:6379/0
SECRET_KEY=replace_with_secure_key
ENV=development

# OpenClaw integration mode for advisory board insights
# remote_http (default): call OpenClaw server API
# local_cli: invoke local openclaw binary on this host
# deterministic_fallback: no OpenClaw call, deterministic text fallback
OPENCLAW_EXECUTION_MODE=remote_http
OPENCLAW_ALLOW_DETERMINISTIC_FALLBACK=true
OPENCLAW_AGENT_TIMEOUT_SECONDS=90

# Used when OPENCLAW_EXECUTION_MODE=remote_http
OPENCLAW_API_BASE_URL=http://13.60.208.226:3000
OPENCLAW_API_AGENT_PATH=/agent
OPENCLAW_API_AUTH_TOKEN=

# Used when OPENCLAW_EXECUTION_MODE=local_cli
OPENCLAW_BIN=/home/ubuntu/.npm-global/bin/openclaw
